<article class="post">
    <div class="whole-post">
        <div class="info-section">
            <div class="post-name">
                <a href= "/post/{{post_id}}" class="links">{{post_title}}</a>
            </div>
            <div class="created-by">
                <p id="comment-subtitle">
                    Posted by <b>{{user.user_name}} </b> on <b>{{formatDate, created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{post_content}}</p>
        </div>
    </div>
</article>