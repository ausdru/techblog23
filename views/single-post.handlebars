<main>
  <h1>{{post_title}}</h1>
  <p>{{post_content}}</p>
  <p>Posted by {{post.user_id}} on {{formatDate post.created_at}}</p>

  <div class="comments">
    <h3>Comments:</h3>
    {{#if post.comments}}
      {{#each post.comments as |comment|}}
        <div class="comment">
          <p>{{comment_text}}</p>
          <p>Comment by {{comment.user.user_id}} on {{formatDate comment.created_at}}</p>
        </div>
      {{/each}}
    {{else}}
      <p>No comments yet.</p>
    {{/if}}
  </div>

  {{#if loggedIn}}
    <form id="comment-form" onsubmit="return false;">
      <textarea name="comment" placeholder="Add a comment"></textarea>
      <button type="submit">Submit Comment</button>
    </form>
  {{/if}}
</main>